<Page x:Class="facebook.homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:facebook"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="homepage" Background="White">
    <StackPanel>
    <Grid>
            <Label FontSize="36" HorizontalAlignment="Center" FontFamily="Showcard Gothic">Facebook</Label>
            <Label FontSize="26" Margin="23,60,565,-59" FontFamily="Snap ITC">search:</Label>
            <TextBox x:Name="search" Margin="154,60,303,-60"></TextBox>
            <Button FontSize="26" Margin="529,60,93,-60" FontFamily="Snap ITC" Click="Button_Click">search</Button>
            <Button FontSize="26" Margin="232,142,233,-142" FontFamily="Snap ITC">post</Button>
            <DataGrid x:Name="data" Margin="23,223,18,-373"></DataGrid>
    </Grid>
    </StackPanel>
</Page>
