<Page x:Class="facebook.signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:facebook"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="signup" Background="White">
    <StackPanel>
    <Grid>
            <Label FontSize="36" HorizontalAlignment="Center" FontFamily="Showcard Gothic">Signup Page</Label>
            <Label FontSize="26" Margin="19,106,450,-105" FontFamily="Snap ITC">username:</Label>
            <Label FontSize="26" Margin="19,189,450,-189" FontFamily="Snap ITC">password:</Label>
            <TextBox x:Name="username" Margin="218,106,131,-106"></TextBox>
            <TextBox x:Name="password" Margin="218,189,131,-189"></TextBox>
            <TextBox x:Name="confirm" Margin="241,287,108,-286"></TextBox>
            <Label FontSize="26" Margin="19,286,564,-286" FontFamily="Snap ITC">Confirm pass:</Label>
            <Button FontSize="26" Margin="558,346,60,-337" FontFamily="Snap ITC" Click="Button_Click">signup</Button>
    </Grid>
    </StackPanel>
</Page>
