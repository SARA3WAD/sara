<Page x:Class="facebook.forget"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:facebook"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="forget" Background="White">
    <StackPanel>
    <Grid>
            <Label FontSize="36" FontFamily="Showcard Gothic" HorizontalAlignment="Center" >Add aNew Password</Label>
            <Label FontSize="26" Margin="26,103,569,-102" FontFamily="Snap ITC">username:</Label>
            <Label FontSize="26" Margin="26,182,518,-181" FontFamily="Snap ITC">new password:</Label>
            <TextBox x:Name="nametext" Margin="203,102,203,-102"></TextBox>
            <TextBox x:Name="password" Margin="282,182,178,-182"></TextBox>
            <Button FontSize="26" Margin="558,262,56,-262" FontFamily="Snap ITC" Click="Button_Click">save</Button>
        
    </Grid>
    </StackPanel>
</Page>
